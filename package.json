{
	"name": "wedding-site",
	"private": true,
	"sideEffects": false,
	"scripts": {
		"build": "run-s build:*",
		"build:css": "npm run generate:css -- --minify",
		"build:remix": "tsc -b && remix build",
		"dev": "run-p dev:*",
		"dev:css": "npm run generate:css -- --watch",
		"dev:remix": "cross-env NODE_ENV=development binode --require ./mocks -- @remix-run/dev:remix dev",
		"format": "prettier --write .",
		"generate:css": "tailwindcss -i ./app/styles/app.css -o ./app/styles/tailwind.css",
		"lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
		"start": "remix-serve build",
		"start:mocks": "binode --require ./mocks --require dotenv/config -- @remix-run/serve:remix-serve build",
		"test": "vitest",
		"test:e2e:dev": "start-server-and-test dev http://localhost:3000 \"npx cypress open\"",
		"pretest:e2e:run": "npm run build",
		"disabled-for-now:test:e2e:run": "cross-env PORT=8811 start-server-and-test start:mocks http://localhost:8811 \"npx cypress run\"",
		"typecheck": "tsc -b && tsc -b cypress",
		"disabled-for-now:validate": "run-p \"test -- --run\" lint typecheck test:e2e:run",
		"validate": "run-p \"test -- --run\" lint typecheck",
		"prepare": "husky install"
	},
	"eslintIgnore": [
		"/node_modules",
		"/build",
		"/public/build"
	],
	"dependencies": {
		"@headlessui/react": "^1.7.0",
		"@heroicons/react": "^1.0.6",
		"@remix-run/node": "^1.7.1",
		"@remix-run/react": "^1.6.0",
		"@remix-run/serve": "^1.5.1",
		"@remix-run/server-runtime": "^1.6.0",
		"@xstate/react": "^3.0.0",
		"airtable": "^0.11.3",
		"bcryptjs": "^2.4.3",
		"date-fns": "^2.28.0",
		"datebook": "^7.0.1",
		"qs": "^6.10.4",
		"react": "^18.0.0",
		"react-dom": "^18.0.0",
		"tiny-invariant": "^1.2.0",
		"xstate": "^4.30.6"
	},
	"devDependencies": {
		"@faker-js/faker": "^7.3.0",
		"@remix-run/dev": "^1.5.1",
		"@remix-run/eslint-config": "^1.5.1",
		"@tailwindcss/forms": "^0.5.0",
		"@tailwindcss/typography": "^0.5.2",
		"@testing-library/cypress": "^8.0.2",
		"@testing-library/dom": "^8.13.0",
		"@testing-library/jest-dom": "^5.16.4",
		"@testing-library/react": "^13.3.0",
		"@testing-library/user-event": "^14.2.0",
		"@types/bcryptjs": "^2.4.2",
		"@types/eslint": "^8.4.2",
		"@types/node": "16.11.19",
		"@types/react": "^18.0.15",
		"@types/react-dom": "^18.0.6",
		"@vitejs/plugin-react": "^2.0.0",
		"@xstate/inspect": "^0.7.0",
		"autoprefixer": "^10.4.7",
		"binode": "^1.0.5",
		"c8": "^7.11.3",
		"concurrently": "^7.0.0",
		"cross-env": "^7.0.3",
		"cypress": "^10.3.1",
		"eslint": "^8.16.0",
		"eslint-config-prettier": "^8.5.0",
		"happy-dom": "^6.0.4",
		"husky": "^8.0.1",
		"lint-staged": "^13.0.0",
		"msw": "^0.44.2",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.4.14",
		"prettier": "^2.6.2",
		"prettier-plugin-tailwindcss": "^0.1.11",
		"start-server-and-test": "^1.14.0",
		"tailwindcss": "^3.0.24",
		"ts-node": "^10.7.0",
		"tsconfig-paths": "^4.0.0",
		"typescript": "^4.7.4",
		"vite": "^3.0.2",
		"vite-tsconfig-paths": "^3.4.1",
		"vitest": "^0.18.1"
	},
	"engines": {
		"node": ">=14"
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx}": "eslint",
		"*.{js,jsx,ts,tsx,css,md}": "prettier --write"
	}
}
